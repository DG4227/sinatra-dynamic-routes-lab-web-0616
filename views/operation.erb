<h1><%num1 = params[:number1].to_i, num2 = params[:number2].to_i %>
		<%if params[:operation] == add%>
			<%="#{num1 + num2}"%>
		<%elsif params[:operation] == subtract%>
			<%="#{num1 - num2}"%>
		<%elsif params[:operation] == multiply%>
			<%="#{num1 * num2}"%>
		<%else%> 
			<%="#{num1 / num2}"%>
		<%end%